<section class="main-content-outer h-100">
    <div class="container-fluid h-100">
        <div class="form-row h-100">
            <div class="main-content-section">
                <div class="right-panel">
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <div class="title-bg title2 d-flex align-items-center justify-content-between">
                                <div class="menu-wrapper-title">
                                    <div class="menu-baricon">
                                        <a href="javascript:void(0);" class="sidemenu-wrap">
                                            <svg xmlns="http://www.w3.org/2000/svg"
                                                class="icon icon-tabler icon-tabler-menu-2" width="44" height="44"
                                                viewBox="0 0 24 24" stroke-width="1.5" stroke="#6c757d" fill="none"
                                                stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                <path d="M4 6l16 0"></path>
                                                <path d="M4 12l16 0"></path>
                                                <path d="M4 18l16 0"></path>
                                            </svg>
                                        </a>
                                    </div>
                                    <img src="/images/client.svg" alt="icon">
                                </div>
                                <h1>User Messenger</h1>
                                <select class="form-control select-client">
                                    <option value="<%=selected_user.id%>"><%=selected_user.name%></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-block form-block2">
                                <h3 class="chat-heading">Admin</h3>
                            </div>
                            <div class="chat-container">
                                <ul class="chat user-<%=selected_user.id%>-chat-messages user-chatting" id="chat-message" data-username="<%=selected_user.name%>">
                                    <% message_list.map(function(response,i){
                                        const date = response.createdAt;
                                        const day = date.getDate();
                                        const month = date.toLocaleString('default', { month: 'long' });
                                        const year = date.getFullYear();
                                        const hours = String(date.getHours()).padStart(2, '0');
                                        const minutes = String(date.getMinutes()).padStart(2, '0');
                                        const seconds = String(date.getSeconds()).padStart(2, '0');
                                        const formattedDate = `${day} ${month} ${year}, ${hours}:${minutes}:${seconds}`;
                                        %>
                                        <li class="message <%=(response.user_id == 1) ? 'left': 'right'%>">
                                            <div class="chat-date"><%=formattedDate%></div>
                                            <div class="chatblock">
                                                <p><%-response.message%></p>
                                            </div>
                                        </li>
                                    <% }) %>
                                </ul>
                                <div class="msgsend-form">
                                    <form id="user-chat-form">
                                        <div class="input-group">
                                            <div id="typing-indicator<%=  %>"></div>                                            
                                            <input type="text" class="form-control" id="send-message" placeholder="Type your Message....">
                                            <div class="input-group-prepend">
                                                <div class="gif_popup">
                                                    <div class="gif_search_con">
                                                        <input type="text" class="gif_search_keyup" data-usertype="user" id="gif_search_keyup" placeholder="Search for a GIF...">
                                                    </div>
                                                    <div id="gif-container"></div>                                                    
                                                </div>
                                                <a href="javascript:void(0)" class="gif_pop_opener"><img src="/images/gif.svg" /></a>
                                                <button id="emojiButton" type="button">ğŸ˜Š</button>
                                                <emoji-picker id="emojiPicker" style="display: none;"></emoji-picker>
                                                <button class="btn"><i class="fa fa-paper-plane"></i></button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>